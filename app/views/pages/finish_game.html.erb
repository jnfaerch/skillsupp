<div class="mx-auto div-logo " >
  <div class="logo-placement"><%= image_tag "logo-crown.png", alt: "logo", width: 300 %></div>
</div>

<div class="div-text">
  <div class="fixed-bottom div-bottom-competences"> <!-- fix the competeces to the bottom -->
    <h2>Congratulations<br><%= current_user.name %>!</h2>
    <p>You finished all the games in this topic!</p>
    <p>Wanna keep on playing? Choose your next skill!</p>
    <div class="d-flex"> <!-- give size to the competences line -->
      <% @competences.each do |competence| %>
        <div class="text-center">
          <div class="card text-white <%= competence.image_name %> mb-3 competence-body-link"> <!-- Card -->
            <div class="card-body d-flex flex-column">

              <div class="mt-auto"><%= image_tag(competence.image_name, class: "img-fluid image-size-control") %></div>
            </div>
            <%= link_to "", competence_path(competence), class: "competence-link" %>
          </div> <!-- Card end -->
        </div> <!-- Col end -->
      <% end %> <!-- Loop end -->
    </div>
  </div>
</div>
