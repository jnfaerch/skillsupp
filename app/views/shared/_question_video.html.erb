<div class="container">
  <div class="row">

    <div class="col-12 col-md-6 offset-md-3 video-padding">
      <div class="embed-responsive embed-responsive-16by9">
        <iframe
          class="embed-responsive-item"
          src="https://www.youtube.com/embed/<%= @question.video %>?rel=0"
          frameborder="0"
          allowfullscreen>
        </iframe>
      </div>
    </div>

    <div class="col-12 col-md-6 offset-md-3 top-pading-question-show">
    <p class="base-text"><%= @question.content %></p>
      <%= form_tag(user_answer_path, :method => "patch") do %>
        <ul class="list-group list-group-flush">
          <%= hidden_field_tag(:question_id, @question.id) %>
          <%= hidden_field_tag(:user_answer_id, @user_answer.id) %>
          <% if @correct_answer.present? %>
            <%= hidden_field_tag(:correct_answer_id, @correct_answer.id) %>
          <% end %>
          <% @question.answers.each do |answer| %>
            <li class="list-group-item d-flex">
              <label class="base-text"><%= radio_button_tag(:choosen_answer_id, answer.id) %>&nbsp;
              <%= answer.content %></label>
            </li>
          <% end %>
        </ul>
        <div class="fixed-bottom bg-white">
          <%= submit_tag("Check my answer!", class: "btn btn-lg btn-danger btn-answer-block") %>
        </div>
      <% end %>
    </div>

  </div> <!-- end of row -->
</div> <!-- end of container -->




