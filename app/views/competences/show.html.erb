<div class="competence_name <%= @competence.color.name %>">
  <h3><%= @competence.name %></h3>
</div>

<div class="container">

  <!-- list of games -->
  <div class="games-list">
    <div id="carouselExampleControls"
    class="carousel slide" data-interval="false" data-ride="carousel">

      <div class="carousel-inner row">
        <% @competence.games_with_questions.each.with_index do |game, i| %>
          <div class="carousel-item <%= 'active' if i == 0 %>">
            <div class="card card-competence <%= @competence.color.name %> col-12">
              <div class="text-box">
                <h3><%= link_to game.name, question_path(game.questions.first) %></h3>
                <i class="<%= @competence.color.icon %> fa-9x img-fluid belonging-img"></i>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls"
      role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls"
      role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div> <!-- end of carousel Example Controls -->

    <!-- description of competence -->
    <div class="competence_description">
      <p class="base-text"><%= @competence.description %></p>
    </div>
  </div> <!-- end of games list -->

  <!-- random game choose for the user -->
  <div class="fixed-bottom bg-white">
    <%= link_to "Choose a game for me", question_path(@competence.games_with_questions.sample.questions.first), class: "btn btn-lg btn-danger btn-block button-random btn-position" %>
  </div>
</div> <!-- end of container -->
