<div class="competence_name <%= @competence.color.name %>">
  <h3><%= @competence.name %></h3>
</div>

<div class="container">
  <div class="competence_description">
    <p><%= @competence.description %></p>
  </div>

  <!-- list of games -->
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner row">
      <% @competence.games.each.with_index do |game, i| %>
        <div class="carousel-item <%= 'active' if i == 1 %>">
          <div class="card card-competence <%= @competence.color.name %> col-12">
            <div class="text-box">
              <h3><%= link_to game.name, question_path(game.questions.first) %></h3>
              <i class="<%= @competence.color.icon %> fa-9x img-fluid belonging-img"></i>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <!-- random game choose for the user -->
  <div>
    <%= link_to "Choose a game for me", question_path(@competence.games.sample.questions.first), class: "btn btn-lg btn-danger btn-block button-random fixed-bottom btn-position" %>
  </div>
</div>





